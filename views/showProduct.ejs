<%- include('./partials/nav.ejs') %>

<div class="container-fluid p-1">
    <div class="row">
        <div class="col-md-12 text-center">

            <h3 class="alert-primary p-2">Product List</h3>

        </div>
        
    </div>
</div>

<div class="container mt-2 bg-white text-dark">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-responsive table-bordered">
                <thead class="bg-success">
                    <tr>
                        <th>Sr.No</th>
                        <th>Action</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Duplicate Price</th>
                        <th>Description</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(i=0;i<productdata.length;i++){%>

                        <tr>
                            <td>
                                <%=i+1%>
                            </td>
                            <td>
                                <a class="text-danger" href="/deleteproduct/<%=productdata[i]._id%>" onclick="return confirm('Are you sure...')"><i class="fa fa-trash" style="font-size:30px ;"></i></a>&nbsp<span style="font-size: 30px; font-weight: bold;">|</span>
                                <a href="/getproductbyid/<%=productdata[i]._id%>" class="edit"><i class="fa fa-edit" style="font-size:30px ;"></i></a>
                            </td>
                            
                            <td>
                                <%=productdata[i].product_name%>
                            </td>
                            <td>
                                <%=productdata[i].product_price%>

                            </td><td>
                                <%=productdata[i].product_d_price%>

                            </td><td>
                                <%=productdata[i].product_desc%>

                            </td>
                            <td style="width: 200px;">
                                <img src="/upload/<%=productdata[i].product_image%>" class="h-100 w-75" alt="">
                            </td>
                           
                        </tr>
                       
                        <%}%>
                </tbody>
            </table>
            <br>
            <br>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>

